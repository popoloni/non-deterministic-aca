<?xml version="1.0" encoding="UTF-16"?>
<!-- ralph-nightly.xml
     Import: Register-ScheduledTask -TaskName "Ralph-Nightly" -Xml (Get-Content .\ralph-nightly.xml -Raw)
     Runs ralph.ps1 every night at 23:00 with a 6-hour timeout.
     Edit <WorkingDirectory> and <Arguments> to match your project path. -->
<Task version="1.2"
      xmlns="http://schemas.microsoft.com/windows/2004/02/mit/task">
  <RegistrationInfo>
    <Description>Nightly Ralph Loop for autonomous development</Description>
  </RegistrationInfo>
  <Triggers>
    <CalendarTrigger>
      <StartBoundary>2026-01-01T23:00:00</StartBoundary>
      <Repetition>
        <Interval>P1D</Interval>
      </Repetition>
      <Enabled>true</Enabled>
    </CalendarTrigger>
  </Triggers>
  <Principals>
    <Principal>
      <LogonType>InteractiveToken</LogonType>
      <RunLevel>LeastPrivilege</RunLevel>
    </Principal>
  </Principals>
  <Settings>
    <MultipleInstancesPolicy>IgnoreNew</MultipleInstancesPolicy>
    <ExecutionTimeLimit>PT6H</ExecutionTimeLimit>
    <DisallowStartIfOnBatteries>false</DisallowStartIfOnBatteries>
    <StopIfGoingOnBatteries>false</StopIfGoingOnBatteries>
    <AllowStartOnDemand>true</AllowStartOnDemand>
    <Enabled>true</Enabled>
  </Settings>
  <Actions>
    <Exec>
      <Command>pwsh.exe</Command>
      <Arguments>-File C:\Dev\project\scripts\ralph\ralph.ps1 -MaxIterations 15</Arguments>
      <WorkingDirectory>C:\Dev\project</WorkingDirectory>
    </Exec>
  </Actions>
</Task>
